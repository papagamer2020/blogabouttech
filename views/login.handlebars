<div class="tile is-ancestor mx-6 mt-6">

  <div class="tile is-vertical is-8">
    <div class="tile">
      <!-- Form to sign up start-->
      <div class="tile is-parent is-vertical">
        <form class="signup-form">
          <div class="field">
            <h2 class="title is-3">Sign up</h2>
            <label class="label" for="username-signup">Username:</label>
            <input type="text" id="username-signup" />
          </div>
          <div class="field">
            <label class="label" for="email-signup">Email:</label>
            <input type="text" id="email-signup" />
          </div>
          <div class="field">
            <label class="label" for="password-signup">Password:</label>
            <input type="password" id="password-signup" />
          </div>
          <div>
            <button class="button" type="submit">Signup</button>
          </div>
        </form>
      </div>
      <!--Form to sign up End-->

      <!-- Form to log in Start-->
      <div class="tile is-parent is-vertical">
        <form class="login-form">
          <div class="field">
            <h2 class="title is-3">Login</h2>
            <label class="label" for="email-login">Email:</label>
            <input type="text" id="email-login" />
          </div>
          <div class="field">
            <label class="label" for="password-login">Password:</label>
            <input type="password" id="password-login" />
          </div>
          <div>
            <button class="button" type="submit">Login</button>
          </div>
        </form>
      </div>
      <!-- Form to logout End -->
    </div>
  </div>
</div>

<script src="/javascript/login.js"></script>