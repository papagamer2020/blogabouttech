<div class="posts">
  {{#each posts as |post|}}
    <div class="card">
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">
        <header class="card-header">
          <p class="card-header-title is-5">{{post.title}}
            <span class="card-header-title is-6" id="posted-by">Posted by
              {{post.user.username}}
              on
              {{format_date post.created_at}}
            </span>
          </p>
        </header>
      </a>
      <div class="card-content">
        <p>{{post.contents}}</p>
      </div>
    </div>
  {{/each}}
</div>

<!-- Form to create blog post -->
<form class="add-blog-post-form hidden my-6 mx-6">
  <h2 class="title is-4">Add Blog Post</h2>
  <div>
    <label for="title">Title:</label>
    <input type="text" id="blog-post-title" />
  </div>
  <div>
    <textarea
      id="blog-contents"
      class="textarea"
      name="post-body"
      placeholder="Write content here."
    ></textarea>
  </div>
  <button id="add-new-blog-post" class="button" type="submit">Add Blog Post</button>
</form>

<div class="mx-6">
  <button id="add-blog-post" class="button" type="submit">Create</button>
</div>

<script src="/javascript/addpost.js"></script>